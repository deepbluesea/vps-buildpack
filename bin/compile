#!/bin/sh

set -eu

BUILD_PATH=$1
CACHE_PATH=$2

export LDFLAGS=-L$BUILD_PATH/lib
export CFLAGS=-I$BUILD_PATH/include
export CPPFLAGS=$CFLAGS
export PATH=$PATH:$BUILD_PATH/bin

wget https://gmplib.org/download/gmp/gmp-6.0.0a.tar.bz2
tar xjf gmp-6.0.0a.tar.bz2
cd gmp-6.0.0
./configure --prefix=$HOME/gmplib --build=$BUILD_PATH
make
make install

wget http://a.pomf.se/szwpgi.tar.gz
tar xzf szwpgi.tar.gz
cd libecc-0.14.0
./configure --prefix=$BUILD_PATH --with-privsep-path=$BUILD_PATH/empty
make
make install
# openssh

wget http://ftp5.usa.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-6.8p1.tar.gz
tar xzf openssh-6.8p1.tar.gz
cd openssh-6.8p1
./configure --prefix=$BUILD_PATH --with-privsep-path=$BUILD_PATH/empty
make

cat <<SSHD_CONFIG > sshd_config
AuthorizedKeysFile app/authorized_keys
ClientAliveInterval 30
HostKey /home/vcap/app/etc/ssh_host_rsa_key
Port 2222
UsePrivilegeSeparation no
SSHD_CONFIG

make install
cd ..
rm -rf openssh-6.8p1
rm openssh-6.8p1.tar.gz

# websockify

wget http://github.com/kanaka/websockify/archive/v0.6.0.tar.gz
tar xvzf v0.6.0.tar.gz
cp -R websockify-0.6.0 $BUILD_PATH
rm -rf websockify-0.6.0
rm v0.6.0.tar.gz

# libevent

wget http://sourceforge.net/projects/levent/files/libevent/libevent-2.0/libevent-2.0.22-stable.tar.gz
tar xzf libevent-2.0.22-stable.tar.gz
cd libevent-2.0.22-stable
./configure --prefix=$BUILD_PATH 
make
make install 
cd ..
rm -rf libevent-2.0.22-stable
rm libevent-2.0.22-stable.tar.gz

# tmux

wget http://a.pomf.se/wbrfbp.tar.gz
tar xzf wbrfbp.tar.gz
cd tmux-1.9a
./configure --prefix=$BUILD_PATH
make
make install
cd ..
rm -rf tmux-1.9a
rm wbrfbp.tar.gz

# cmake

wget http://www.cmake.org/files/v3.2/cmake-3.2.2.tar.gz
tar xzf cmake-3.2.2.tar.gz
cd cmake-3.2.2
./configure --prefix=$BUILD_PATH
make
make install
cd ..
rm -rf cmake-3.2.2
rm cmake-3.2.2.tar.gz

# libgpg-error

wget ftp://ftp.gnupg.org/gcrypt/libgpg-error/libgpg-error-1.9.tar.bz2
tar xjf libgpg-error-1.9.tar.bz2
cd libgpg-error-1.9
./configure --prefix=$BUILD_PATH
make
make install
cd ..
rm -rf libgpg-error-1.9
rm libgpg-error-1.9.tar.bz2

# gcrypt

wget ftp://ftp.gnupg.org/gcrypt/libgcrypt/libgcrypt-1.6.3.tar.bz2
tar xjf libgcrypt-1.6.3.tar.bz2
cd libgcrypt-1.6.3
./configure --prefix=$BUILD_PATH
make
make install
cd ..
rm -rf libgcrypt-1.6.3
rm libgcrypt-1.6.3.tar.bz2

# weechat

wget http://weechat.org/files/src/weechat-1.2.tar.gz
tar xzf weechat-1.2.tar.gz
cd weechat-1.2
mkdir build
cd build
cmake .. -DPREFIX=$BUILD_PATH
make
make install
cd ../..
rm -rf weechat-1.2
rm weechat-1.2.tar.gz

# create env file

cat <<ENV > env
export LD_LIBRARY_PATH=$HOME/app/lib
export PATH=$PATH:$HOME/app/bin
ENV
